<h1>Create todo new</h1>

<% if @todo.errors.any? %>
<h2>The following error preventer todo to safe</h2>
<ul>
  <% @todo.errors.full_messages.each do |msg| %>
  <li> <%= msg %></li>
  <%end%>
</ul>
<%end%>

<%= form_for @todo do |f|  %>
<p>
  <%= f.label :name %><br>
  <%= f.text_field :name%>
</p>
<p>
  <%= f.label :desciption %><br>
  <%= f.text_area :desciption %>
</p>

<%= f.submit %>

<%end%>

<%= link_to "Back to todos Listing", todos_path %>